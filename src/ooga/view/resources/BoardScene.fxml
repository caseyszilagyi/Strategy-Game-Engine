<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="ooga.view.FXMLController"
  minHeight="700.0" minWidth="700.0" styleClass="root"
  hgap="10" vgap="10" alignment="TOP_CENTER">
  <padding>
    <Insets top="0" right="50" bottom="50" left="50"/>
  </padding>

  <HBox GridPane.columnIndex="0" GridPane.rowIndex="0"
    GridPane.columnSpan="1" styleClass="hbox"
    minWidth="700" alignment="CENTER"
  spacing="20">
    <Button text="Pause" id="button" minWidth="80"/>
    <Button text="End Turn" id="button" minWidth="80"/>
    <Button text="Settings" id="button" minWidth="80"/>
    <Button text="Help" id="button" minWidth="80"/>
  </HBox>

  <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER">
    <ImageView
      fitWidth="500" preserveRatio="true">
      <Image url="@exampleBoard.png"/>
    </ImageView>
  </HBox>

  <stylesheets>
    <URL value="@DefaultStyle.css"/>
  </stylesheets>
</GridPane>
